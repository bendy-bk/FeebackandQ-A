    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>Controller.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>Controller.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserdetailController</servlet-name>
        <servlet-class>Controller.UserdetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>myfapController</servlet-name>
        <servlet-class>Controller.myfapController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>commentController</servlet-name>
        <servlet-class>Controller.commentController</servlet-class>
    </servlet>
    <servlet>
